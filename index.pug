doctype html
html
    head
        title Product Landing
        link(rel="icon" href="./css/assets/guitar.svg" type="image/icon type")
        meta(charset="UTF-8")
        meta(name="viewport",content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="./css/mobile.css")
